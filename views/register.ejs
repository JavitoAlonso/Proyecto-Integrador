<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ("./partials/head.ejs")  %> 
</head>
<body class="">
    <%- include ("./partials/header-nav.ejs") %>
    <section class="container p-15  text-ceter bg-grey">
      <div class="d-flex justify-content-center ">
        <h3 class="m-20">Registrate</h3>
      </div>
        <div class="row mb-4 ">
          <div class="col-12 col-xl-6 mt-4">
            <form class="p-15 form-outline" >
              <input type="text" id="form3Example1" class="form-control" name="Nombre" placeholder="Nombre" />
            </form>
          </div>
          <div class="col-12 col-xl-6 mt-4">
            <form class="p-15 form-outline" >
              <input type="text" id="form3Example2" class="form-control" name="Apellido" placeholder="Apellido" />
            </form>
          </div>
        </div>
      
        <!-- Email input -->
        
        <div class="row mb-4 ">
          <div class="col-12 col-xl-6 mt-4">
            <form class="p-15 form-outline" >
              <input type="email" id="form3Example1" class="form-control" name="Email" placeholder="Email"/>
            </form>
          </div>
          <div class="col-12 col-xl-6 mt-4">
            <form class="p-15 form-outline" >
              <input type="tel" id="form3Example2" class="form-control" name="Telefono" placeholder="Telefono"/>
            </form>
          </div>
        </div>
        
        
        <!-- Country input -->
        <div class="row mb-4">
          <div class="col-12 col-xl-6 mt-4 ">
            <form class="p-15">
              <input class="form-control" list="datalistOptions" id="exampleDataList" placeholder="Localida">
              <datalist id="datalistOptions">
                <option value="Ciudad Autonoma de Buenos Aires">
                  <option value="Avellaneda">
                    <option value="Lanus">
                      <option value="Merlo">
                        <option value="Moreno">
                        </datalist >
                      </form>
                    </div>
                    
                    <div class="col-12 col-xl-6 mt-4 ">
                      <form class="p-15">
                        <input class="form-control" list="datalistOptions1" id="exampleDataList" placeholder="Barrio">
                        <datalist id="datalistOptions1">
                          <option value="Boedo">
                            <option value="Caballito">
                              <option value="Almagro">
                                <option value="Flores">
                                  <option value="Palermo">
                                  </datalist >
                                </form>
                              </div>
                            </div>
                          </div>
                          <!-- Password input -->
                          <div class="row mb-4 ">
                            <div class="col-12 col-xl-6 mt-4">
                              <form class="p-15 form-outline" >
                                <input type="password" id="form3Example1" class="form-control" name="password" placeholder="Contraseña" />
                              </form>
                            </div>
                            <div class="col-12 col-xl-6 mt-4">
                              <form class="p-15 form-outline" >
                                <input type="password" id="form3Example2" class="form-control" name="password" placeholder=" Repita Contraseña"/>
                              </form>
                            </div>
                          </div>
                          
                          <!-- Checkbox -->
                          <form class="form-check d-flex justify-content-center mb-4 mt-4">
                            <input class="form-check-input me-2" type="checkbox" value="" id="form2Example33" checked />
                            <label class="form-check-label" for="form2Example33">
                              Acepto los Terminos y Condiciones.
                             </label>
                          </form>
      
        <!-- Submit button -->
        <div class="tex-center d-flex just ">
          <button type="submit" class="btn btn-danger mb-4 mt-4">Registrate</button>
        <button type="reset" class="btn btn-danger  mb-4 mt-4">Borrar</button>
        </div>
        
        <!-- Register buttons -->
        <div class="text-center ">
          <p> o registrate con:</p>
          <button type="button" class="btn btn-danger btn-floating mx-1 mb-4">
            <i class="fab fa-facebook-f"></i>
          </button>
      
          <button type="button" class="btn btn-danger btn-floating mx-1 mb-4">
            <i class="fab fa-google"></i>
          </button>
      
          <button type="button" class="btn btn-danger btn-floating mx-1 mb-4">
            <i class="fab fa-twitter"></i>
          </button>
      
          <button type="button" class="btn btn-danger btn-floating mx-1 mb-4">
            <i class="fab fa-github"></i>
          </button>
        </div>
      
    </section>
    <%- include ("./partials/footer.ejs")  %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
</body>
</html>


